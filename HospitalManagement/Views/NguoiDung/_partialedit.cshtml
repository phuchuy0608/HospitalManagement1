@model HospitalManagement.Models.NguoiDung

@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Extensions
@using HospitalManagement.Constant

@{ string maNguoiDung = Context.Session.GetString(SessionKey.Nguoidung.MaNguoiDung);}

<style>
    .box {
        padding: 0;
        margin: 0;
    }

    h6 {
        margin-left: 10px;
        font-weight: 500;
        font-size: 18px;
    }

    .box-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    .box-left {
        margin-inline: 5%;
    }

    .form-check .form-label {
        margin-left: -4px;
    }

    .form-check-label {
        padding-left: 20px;
        font-weight: 400;
        color: gray;
    }

    .box-right {
        text-align: center;
    }

        .box-right .form-group .btn-img {
            width: 103%;
            margin-left: -1%;
            background-color: rgb(82, 183, 136);
            color: white;
            border: 2px solid rgb(82, 183, 136);
            transition: 0.25s all;
            padding: 10px 0 10px 0;
        }

            .box-right .form-group .btn-img:hover {
                background-color: white;
                border: 2px solid rgb(82, 183, 136);
                color: rgb(82, 183, 136);
            }

    #image-holder2 img {
        width: 250px;
        height: 250px;
        object-fit: cover;
        object-position: center center;
        border-radius: 3%;
    }
</style>
<div class="box-title-1 mb-4">
    <h4>Chỉnh sửa người dùng</h4>
</div>
<div class="box">
    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MaNguoiDung)
        <div class="box-left col-sm-7 row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-12">
                <h6>
                    Tên người dùng
                </h6>
                <div class="col-12">
                    @*@Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })*@
                    <input asp-for="@Model.HoTen" class="form-control" readonly />
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <h6>Chức vụ</h6>
                <div class="col-12">
                    <select asp-for="ChucVu" class="form-select">
                        <option value="0" selected>Chọn chức vụ</option>
                        <option value="1">Admin</option>
                        <option value="2">User</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                </div>
            </div>          

            <div class="form-group form-check col-md-5">
                <h6 class="form-label">Trạng thái</h6>
                <div>
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" asp-for="TrangThai" value="true" /> Đang hoạt động
                    </label>
                </div>

            </div>
        </div>



    }
</div>

