@model HospitalManagement.Models.ChuyenKhoa

<style>
    .box {
        padding: 0;
        margin: 0;
        font-family: Source Sans Pro;
    }

    .box-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    h6 {
        margin-left: 10px;
        font-weight: 500;
        font-size: 18px;
    }
</style>

<div class="box-title-1 mb-4">
    <h4>Chỉnh sửa chuyên khoa</h4>
</div>
<div class="box">
    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-4" style="display:none">
            <label class="control-label col-md-6" for="MaCK">Chuyên khoa</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaCK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaCK, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-12">
            <h6>Tên chuyên khoa<strong style="color:#b10c0c">&nbsp;(*)</strong></h6>
            <div class="col-md-7">
                @Html.EditorFor(model => model.TenCK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCK, "", new { @class = "text-danger" })
            </div>
        </div>

    }
</div>

<script>

    $(document).ready(function () {

    });
</script>
