@model HospitalManagement.Models.DichVu
<style>
    .box {
        padding: 0;
        margin: 0;
    }

    .box-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    h6 {
        margin-left: 10px;
        font-weight: 500;
        font-size: 18px;
    }
</style>

<div class="box-title-1 mb-5">
    <h4>Thêm dịch vụ</h4>
</div>
<div class="box">
    @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="text-danger"></div>
        <div class="form-group col-6">
            <h6>Tên dịch vụ<strong style="color:#b10c0c">&nbsp;(*)</strong></h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDV, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDV, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group col-6">
            <h6>Đơn giá</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>
    }
</div>

