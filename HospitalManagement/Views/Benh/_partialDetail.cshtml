<style>
    .box {
        font-family: Arial;
    }

    .box-top {
        background-color: white;
    }

    .box-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    .box-left {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        margin-left: 40px;
        margin-right: 30px;
    }

    .box-label {
        width: 150px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -15px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .box-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .box-left-text h6 {
        padding: 10px;
        color: rgb(82, 183, 136);
        font-size: 20px;
        font-weight: 700;
        margin-left: 5%;
    }

    .box-right {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .box-right-text {
        margin-inline: 5%;
    }

    .box-bottom {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .box-button button {
        background-color: rgb(82, 183, 136);
        color: white;
        height: 40px;
    }
</style>

@model HospitalManagement.Models.Benh

<div class="box p-3" id="pannelBenh">
    <div class="box-title-1 mb-4">
        <h4>Thêm thông tin bệnh</h4>
    </div>

    <div class="box-top">
        <div class="d-flex flex-wrap">
            <div class="box-left col-sm-4">
                <div class="box-left-title">
                    <div class="box-label">
                        <label class="form-label">Tên bệnh</label>
                    </div>
                    <div class="box-left-text mt-3 mb-3">
                        <h6>@Html.DisplayFor(model => model.TenBenh)</h6>
                    </div>
                </div>
                <div class="box-left-title">
                    <div class="box-label">
                        <label class="form-label">Chuyên khoa</label>
                    </div>
                    <div class="box-left-text mt-3 mb-3">
                        <h6>@Model.MaCKNavigation.TenCK</h6>
                    </div>
                </div>
            </div>
            <div class="box-right col-sm-7">
                <div class="box-right-infomation">
                    <div class="box-label">
                        <label class="form-label">Thông tin bệnh</label>
                    </div>
                    <div class="box-right-text mt-3 mb-3">
                        <p>@Html.DisplayFor(model => model.ThongTin)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="box-bottom mt-5">
        <div class="d-flex justify-content-between mb-3 p-2">
            <div class="box-label">
                <label class="form-label">Triệu chứng</label>
            </div>
        </div>
        <div class="ms-3 me-3 pb-3">
            <table class="table table-bordered text-left w-100" id="tableNhanVien">
                <tr id="thead">
                    <th class="col-3 text-center">
                        STT
                    </th>
                    <th class="col-8">
                        Tên triệu chứng
                    </th>
                </tr>
                <tbody class="tbody">
                    @{
                        var stt = 1;
                        foreach (var item in Model.CTTrieuChung)
                        {
                            <tr>
                                <td width="50px" class="col-3 text-center">#@stt</td>
                                <td class="col-8">
                                    <h6>@item.MaTrieuChungNavigation.TenTrieuChung</h6>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>






