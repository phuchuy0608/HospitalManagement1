@model HospitalManagement.Models.Benh

<style>
    .box {
        font-family: Arial;
    }

    .box-top {
        background-color: white;
    }

    .box-title-1 {
        background-color: white;
        border-left: 8px solid rgb(82, 183, 136);
    }

        .box-title-1 h4 {
            padding: 2%;
            font-size: 35px;
            font-weight: 400;
        }

    .box-left {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        margin-left: 40px;
        margin-right: 30px;
    }

    .box-label {
        width: 180px;
        height: 40px;
        background-color: rgb(82, 183, 136);
        margin-top: 10px;
        margin-left: -15px;
        border-bottom-right-radius: 5px;
        border-top-right-radius: 5px;
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

        .box-label label {
            padding: 6px;
            margin-left: 5px;
            font-style: italic;
            font-size: 18px;
            color: white;
        }

    .box-right {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .box-bottom {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
    }

    .box-button button {
        background-color: rgb(82, 183, 136);
        color: white;
        height: 40px;
    }
</style>


<div class="box p-3">
    <div class="box-title-1 mb-4">
        <h4>Thêm thông tin bệnh</h4>
    </div>
    <div class="box-top ">
        @using (Html.BeginForm(null, null, FormMethod.Get, new { @class = "d-flex flex-wrap", name = "frm", id = "frm", enctype = "multipart/form-data" }))
        {
            <div class="box-left col-sm-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-md-4" style="display:none">
                    <label class="control-label col-md-6" for="MaBenh">MaBenh</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaBenh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaBenh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="box-left-title">
                    <div class="box-label">
                        <label class="form-label">Tên bệnh</label>
                    </div>
                    <div class="box-left-input mt-3 mb-3">
                        @Html.EditorFor(model => model.TenBenh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenBenh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="box-left-title">
                    <div class="box-label">
                        <label class="form-label">Chuyên khoa</label>
                    </div>

                    <div class="box-left-select mt-3 mb-3">
                        <select class="form-select" asp-for="MaCK" asp-items="ViewBag.MaCK">
                        </select>

                        @Html.ValidationMessageFor(model => model.MaCK, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="box-right col-sm-7">
                <div class="box-right-infomation">
                    <div class="box-label">
                        <label class="form-label">Thông tin bệnh</label>
                    </div>
                    <div class="box-right-textarea mt-3 mb-3">
                        <textarea class="form-control" placeholder="Nhập thông tin bệnh ..." id="ThongTin" name="ThongTin" rows="7" style="height: 150px">@Model.ThongTin</textarea>
                        @Html.ValidationMessageFor(model => model.ThongTin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>




        }
    </div>




    <div class="box-bottom mt-5">
        <div class="d-flex justify-content-between mb-3 p-2">
            <div class="box-label">
                <label class="form-label">Triệu chứng (*)</label>
            </div>
            <div class="box-button mt-2">
                <button type="button" class="btn" id="AddCTTrieuChung" onclick="AddView('CTTrieuChung')"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Chi tiết triệu chứng</button>
            </div>
        </div>
        <div class="ms-3 me-3 pb-3">
            <table class="table table-bordered text-left w-100" id="tableCTTrieuChung">
                <tr id="thead">
                    <th class="col-8 ms-4">
                        Tên triệu chứng
                    </th>
                    <th class="text-center col-3"> Thao tác  </th>
                </tr>
                <tbody class="tbody" id="partialCTTrieuChung">
                </tbody>
            </table>
        </div>
    </div>

</div>


<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>







