<body>
    <!-- Container -->
    <div class="container-fluid invoice-container" id="PrintContent">
        <!-- Header -->
        <header>
            <div class="row align-items-center">
                <div class="col-sm-7 text-left text-sm-start mb-3 mb-sm-0"> <img id="logo" src="~/GuestElement/img/TESLogo2.png" title="Koice" alt="Koice" /> </div>
                <div class="col-sm-5 text-center text-sm-end">
                    <h4 class="mb-0 text-success" style="font-family: Poppins, sans-serif;"><strong>HÓA ĐƠN THUỐC</strong></h4>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main>
            <div class="row">
                <p class="mb-0" style="text-align: right;">Mã hóa đơn: <strong>@Model.MaHD</strong> </p>
                <p class="mb-0" style="text-align: right;">Nhân viên: <strong>@Model.MaNVNavigation.HoTen</strong> </p>
                <div class="mb-3 text-sm-end" style="text-align: right;">Thời gian khám: <strong>@Model.NgayHD</strong></div>
            </div>

            <hr class="mt-0">
            <div class="row">
                <div class="col-6">
                    <strong>Họ và tên:</strong>
                    <p>@Model.MaPKNavigation.MaPhieuKhamNavigation.MaBNNavigation.HoTen</p>
                </div>
                <div class="col-6">
                    <strong>Số điện thoại:</strong>
                    <p>@Model.MaPKNavigation.MaPhieuKhamNavigation.MaBNNavigation.SDT</p>
                </div>
                <div class="col-6">
                    <strong>Ngày sinh:</strong>
                    <p>@Model.MaPKNavigation.MaPhieuKhamNavigation.MaBNNavigation.NgaySinh?.ToString("dd/MM/yyyy")</p>
                </div>
                <div class="col-6">
                    <strong>Địa chỉ:</strong>
                    <p>@Model.MaPKNavigation.MaPhieuKhamNavigation.MaBNNavigation.DiaChi</p>
                </div>


            </div>
            <div class="card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead class="card-header">
                                <tr>
                                    <td class="col-7"><strong>Tên thuốc</strong></td>
                                    @*<td class="col-4"><strong>Ghi chú</strong></td>*@
                                    <td class="col-2 text-center"><strong>Số lượng</strong></td>
                                    <td class="col-3 text-end"><strong>Thành tiền</strong></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MaPKNavigation.ChiTietToaThuoc)
                                {
                                    <tr>
                                        <td class="col-7"><strong>@item.MaThuocNavigation.TenThuoc</strong><br />
                                        
                                         <i>@item.GhiChu</i>
                                        
                                        </td>
                                        @*<td class="col-4"><strong>@item.GhiChu</strong></td>*@
                                        <td class="col-2 text-center"><strong>@item.SoLuong</strong></td>
                                        <td class="col-3 text-end"><strong>@((item.DonGiaThuoc * item.SoLuong)?.ToString("n0").Replace(',', '.')) VNĐ</strong></td>
                                    </tr>
                                }


                            </tbody>
                            <tfoot class="card-footer">
                                <tr>
                                    <td class="col-7"></td>                                    
                                    <td class="col-2 border-bottom-0 text-center"><strong>Tổng tiền</strong></td>
                                    <td class="col-6 border-bottom-0 text-end"><strong>@Model.TongTien.ToString("n0").Replace(',', '.') VNĐ</strong></td>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                </div>
            </div>

        </main>
        <!-- Footer -->
        <footer class="text-center">
            <hr>
            <p>
                <strong>Mã Phúc Huy Hospital</strong><br>
                CMT8, Ward 6, Tan Binh District, HCM City
            </p>
            <hr>

            <div class="btn-group btn-group-sm d-print-none"> <a onclick="PrintElem()" class="btn btn-light border text-black-50 shadow-none"><i class="fa fa-print"></i> Print</a></div>
        </footer>
    </div>
    <!-- Back to My Account Link -->
    <p class="text-center d-print-none"><button class="btn btn-primary" id="btnClose" onclick="clearContent()" data-bs-dismiss="modal">&laquo; Quay lại</button></p>
